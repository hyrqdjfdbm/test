<body>
    <div class="container">
        <h1>交办函管理系统</h1>
        
        <div class="header-section">
            <div class="month-selector">
                <label for="monthSelect">选择月份：</label>
                <select id="monthSelect">
                    <option value="2024-01">2024年1月</option>
                    <option value="2024-02">2024年2月</option>
                    <option value="2024-03">2024年3月</option>
                    <option value="2024-04">2024年4月</option>
                    <option value="2024-05">2024年5月</option>
                    <option value="2024-06">2024年6月</option>
                </select>
            </div>
            
            <div class="search-bar">
                <input type="text" placeholder="搜索街镇..." id="searchInput">
                <button class="btn btn-primary" onclick="searchTowns()">搜索</button>
                <button class="btn btn-secondary" onclick="resetSearch()">重置</button>
            </div>
        </div>
        
        <div class="town-list" id="townList">
            <!-- 街镇项目将通过JavaScript动态生成 -->
        </div>
    </div>
    
    <!-- 查看文件模态框 -->
    <div id="viewModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <span class="modal-title">查看交办函</span>
                <span class="close" onclick="closeViewModal()">&times;</span>
            </div>
            <div id="fileContent">
                <!-- 文件内容将通过JavaScript动态生成 -->
            </div>
            <div style="margin-top: 20px; text-align: right;">
                <button class="btn btn-secondary" onclick="closeViewModal()">关闭</button>
            </div>
        </div>
    </div>
    
    <!-- 提示信息 -->
    <div id="toast" class="toast"></div>
    
    <script>
        // 模拟数据
        const towns = [
            {
                id: 1,
                name: "兰江街道",
                status: "pending",
                files: [
                    {
                        id: 1,
                        name: "兰江街道交办函.pdf",
                        size: "2.5MB",
                        created: "2024-03-15 10:30",
                        url: "#"
                    }
                ]
            },
            {
                id: 2,
                name: "云山街道",
                status: "sent",
                files: [
                    {
                        id: 2,
                        name: "云山街道交办函.pdf",
                        size: "1.8MB",
                        created: "2024-03-15 11:20",
                        url: "#"
                    }
                ]
            },
            {
                id: 3,
                name: "永昌街道",
                status: "pending",
                files: [
                    {
                        id: 3,
                        name: "永昌街道交办函.pdf",
                        size: "3.2MB",
                        created: "2024-03-15 09:45",
                        url: "#"
                    }
                ]
            },
            {
                id: 4,
                name: "赤溪街道",
                status: "pending",
                files: [
                    {
                        id: 4,
                        name: "赤溪街道交办函.pdf",
                        size: "2.1MB",
                        created: "2024-03-15 14:10",
                        url: "#"
                    }
                ]
            },
            {
                id: 5,
                name: "女埠街道",
                status: "sent",
                files: [
                    {
                        id: 5,
                        name: "女埠街道交办函.pdf",
                        size: "2.8MB",
                        created: "2024-03-15 15:30",
                        url: "#"
                    }
                ]
            }
        ];
        
        // 初始化页面
        function initPage() {
            renderTowns(towns);
        }
        
        // 渲染街镇列表
        function renderTowns(townList) {
            const townListEl = document.getElementById('townList');
            townListEl.innerHTML = '';
            
            if (townList.length === 0) {
                townListEl.innerHTML = '<p style="text-align: center; padding: 20px; color: #888;">暂无街镇数据</p>';
                return;
            }
            
            townList.forEach(town => {
                const townEl = document.createElement('div');
                townEl.className = 'town-item';
                
                // 状态文本和类名
                const statusText = town.status === 'pending' ? '待发送' : '已发送';
                const statusClass = town.status === 'pending' ? 'status-pending' : 'status-sent';
                
                townEl.innerHTML = `
                    <div class="town-header">
                        <div class="town-name">${town.name}</div>
                        <div class="town-status ${statusClass}">${statusText}</div>
                    </div>
                    
                    <div class="file-info">
                        ${town.files.map(file => `
                            <div class="file-item">
                                <div class="file-header">
                                    <div class="file-name">${file.name}</div>
                                    <div class="file-actions">
                                        <button class="btn btn-secondary" onclick="viewFile(${town.id}, ${file.id})">查看</button>
                                        <button class="btn btn-secondary" onclick="downloadFile(${file.id})">下载</button>
                                    </div>
                                </div>
                                <div class="file-meta">
                                    大小: ${file.size} | 创建时间: ${file.created}
                                </div>
                            </div>
                        `).join('')}
                    </div>
                    
                    <div class="file-replace">
                        <h4>文件替换</h4>
                        <div class="file-input">
                            <input type="file" id="fileInput-${town.id}" accept=".pdf,.doc,.docx">
                        </div>
                        <button class="btn btn-warning" onclick="replaceFile(${town.id})">替换文件</button>
                    </div>
                    
                    <div class="action-buttons">
                        ${town.status === 'pending' ? `
                            <button class="btn btn-primary" onclick="sendLetter(${town.id})">发送给街镇</button>
                        ` : `
                            <button class="btn btn-secondary" disabled>已发送</button>
                        `}
                    </div>
                `;
                
                townListEl.appendChild(townEl);
            });
        }
        
        // 搜索街镇
        function searchTowns() {
            const searchTerm = document.getElementById('searchInput').value.toLowerCase();
            const filteredTowns = towns.filter(town => 
                town.name.toLowerCase().includes(searchTerm)
            );
            renderTowns(filteredTowns);
        }
        
        // 重置搜索
        function resetSearch() {
            document.getElementById('searchInput').value = '';
            renderTowns(towns);
        }
        
        // 查看文件
        function viewFile(townId, fileId) {
            const town = towns.find(t => t.id === townId);
            const file = town.files.find(f => f.id === fileId);
            
            document.getElementById('fileContent').innerHTML = `
                <p>文件名称：${file.name}</p>
                <p>文件大小：${file.size}</p>
                <p>创建时间：${file.created}</p>
                <div style="margin-top: 20px; padding: 20px; background-color: #f9f9f9; border-radius: 4px;">
                    <p style="text-align: center; color: #888;">文件预览功能模拟</p>
                    <p style="text-align: center; margin-top: 10px;">此处将显示文件内容预览</p>
                </div>
            `;
            
            document.getElementById('viewModal').style.display = 'block';
        }
        
        // 关闭查看模态框
        function closeViewModal() {
            document.getElementById('viewModal').style.display = 'none';
        }
        
        // 下载文件
        function downloadFile(fileId) {
            showToast('文件下载中...', 'success');
            // 实际项目中这里会实现真实的文件下载功能
        }
        
        // 替换文件
        function replaceFile(townId) {
            const fileInput = document.getElementById(`fileInput-${townId}`);
            if (fileInput.files.length === 0) {
                showToast('请选择要替换的文件', 'error');
                return;
            }
            
            const fileName = fileInput.files[0].name;
            showToast(`文件 ${fileName} 替换成功`, 'success');
            // 实际项目中这里会实现真实的文件替换功能
        }
        
        // 发送交办函
        function sendLetter(townId) {
            const town = towns.find(t => t.id === townId);
            showToast(`已成功发送给 ${town.name}`, 'success');
            
            // 更新状态
            town.status = 'sent';
            renderTowns(towns);
        }
        
        // 显示提示信息
        function showToast(message, type) {
            const toast = document.getElementById('toast');
            toast.textContent = message;
            toast.className = `toast ${type} show`;
            
            setTimeout(() => {
                toast.classList.remove('show');
            }, 3000);
        }
        
        // 关闭模态框
        function closeViewModal() {
            document.getElementById('viewModal').style.display = 'none';
        }
        
        // 点击模态框外部关闭
        window.onclick = function(event) {
            const viewModal = document.getElementById('viewModal');
            if (event.target === viewModal) {
                closeViewModal();
            }
        }
        
        // 月份选择变化
        document.getElementById('monthSelect').addEventListener('change', function() {
            showToast('月份切换成功', 'success');
            // 实际项目中这里会根据选择的月份加载对应的数据
        });
        
        // 初始化页面
        initPage();
    </script>
</body>
</html>
